{% extends layoutTemplate %}

{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block dynQuestionContent %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            {% if question.html %}
                {% set beforeInputsHtml = question.html %}
            {% endif %}
            <form action="" method="post" novalidate>
                {% if _csrf %}<input type="hidden" name="_csrf" value="{{ _csrf }}">{% endif %}
                {% if question.interfaceType === 'radio' %}
                    {{ govukRadios({
                        classes: "govuk-radios",
                        idPrefix: question.fieldName,
                        name: question.fieldName,
                        fieldset: {
                            legend: {
                                text: question.question,
                                isPageHeading: true,
                                classes: "govuk-fieldset__legend--l"
                            }
                        },
                        formGroup: {
                            beforeInputs: {
                                html: beforeInputsHtml
                            }
                        },
                        errorMessage: errors[question.fieldName] and {
                            text: errors[question.fieldName].msg
                        },
                        hint: question.hint and { text: question.hint },
                        items: question.options
                    }) }}

                    {% elif question.interfaceType === 'checkbox' %}
                    {{ govukCheckboxes({
                        classes: "govuk-checkboxes",
                        idPrefix: question.fieldName,
                        name: question.fieldName,
                        fieldset: {
                            legend: {
                                text: question.question,
                                isPageHeading: true,
                                classes: "govuk-fieldset__legend--l"
                            }
                        },
                        formGroup: {
                            beforeInputs: {
                                html: beforeInputsHtml
                            }
                        },
                        errorMessage: errors[question.fieldName] and {
                            text: errors[question.fieldName].msg
                        },
                        items: question.options
                    }) }}
                {% endif %}
                {{ govukButton({
                    text: continueButtonText,
                    type: "submit",
                    attributes: { "data-cy":"button-save-and-continue"}
                }) }}
            </form>
        </div>
    </div>
{% endblock %}
