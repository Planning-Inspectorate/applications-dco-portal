{% extends "views/layouts/main.njk" %}

{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% block pageHeading %}{% endblock %}

{% block pageContent %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
        {{ govukPanel({
            titleText: "Application complete",
            html: "Your reference number<br><strong>" + caseReference + "</strong>"
        }) }}

        <p class="govuk-body">Submitted at {{ dateSubmitted }}.</p>

        <p class="govuk-body">We have sent you a confirmation email. You can also download a receipt of the submission as a PDF.</p>

        <p class="govuk-body"><a class="govuk-link govuk-link--no-visited-state" href="" target="_blank" rel="noreferrer">Generated PDF TBC</a></p>

        <h2 class="govuk-heading-m">What happens next</h2>

        <p class="govuk-body"><a class="govuk-link govuk-link--no-visited-state" href="">What did you think of this service?</a> (takes 30 seconds)</p>
        </div>
    </div>
{% endblock %}
