{% extends "views/layouts/main.njk" %}
{% from "govuk/components/task-list/macro.njk" import govukTaskList %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}

{% block pageHeading %}{% endblock %}

{% block pageContent %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">
        {{ pageTitle }}
      </h1>

      {% if showManageUsersLink %}
        <p class="govuk-body"><a class="govuk-link govuk-link--no-visited-state" href="/manage-users">Manage users</a></p>
      {% endif %}

      <h2 class="govuk-heading-m">
        1. Your documents
      </h2>

      {{ govukTaskList({
        idPrefix: "document-categories",
        items: taskListItems.yourDocuments
      }) }}

      <h2 class="govuk-heading-m">
        2. Your Application
      </h2>

      {{ govukTaskList({
        idPrefix: "your-application",
        items: taskListItems.yourApplication
      }) }}

      <h2 class="govuk-heading-m">
        You will be able to submit your application on Your Date Here
      </h2>
      <p class="govuk-body">
        Once the application is submitted, it will be locked and you can make no further changes
      <p>
      {{ govukWarningText({
          text: "If you miss this date, you'll have to agree to a new submission date with the Planning Inspectorate."
      }) }}
    </div>
  </div>
{% endblock %}