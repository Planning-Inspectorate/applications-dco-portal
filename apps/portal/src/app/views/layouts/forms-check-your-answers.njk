{% extends "components/task-list/index.njk" %}

{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}

{% set title = "Check your Answers - " + journeyTitle + " - DCO Portal" %}

{% block beforeTaskList %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full govuk-!-margin-bottom-3">
            <h1 class="govuk-heading-l">
                Check your answers
            </h1>
        </div>
    </div>
{% endblock %}

{% if summaryWarningMessage %}
    {% set beforeSubmitButton = govukWarningText({
        text: summaryWarningMessage
    }) %}
{% endif %}
